{
    "compilerOptions": {
        "watch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "outDir": "./build",
        "baseUrl": "./",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "target": "es2020",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "paths": {
            "@app/*": ["./src/Application/*"],
            "@domain/*": ["./src/Domain/*"],
            "@infra/*": ["./src/Infrastructure/*"],
            "@web/*": ["src/Presentation/*"],
        },
        "lib": [
            "esnext",
            "dom",
            "es2020",
            "es2020.promise",
            "es2020.bigint",
            "es2020.string"
        ]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "**/.js",
       "./src/tests/",
        "node_modules",
        "**/*.spec.ts",
        "build"
    ]
  }